<div class="row">
  <div class="col-md-8"></div>
  <div class="col-md-4 right">
    <div class="user">
      <% if logged_in? %>
        <%= current_user.name %><span class="gray">&nbsp|</span>
        <%= link_to 'profile', user_path(@current_user) %><span class="gray">&nbsp|</span>
        <%= link_to 'log out', logout_path, method: :delete %>
      <% else %>
          <%= link_to 'login', login_path %>&nbsp;|&nbsp;<%= link_to 'register', signup_path %>
      <% end %>
    </div>
  </div>
</div>
<div class="row headerlinks">
  <div class="col-md-12">
    <%= link_to 'home', home_path, class: 'link link-primary' + (is_current_page?('home') ? ' selected' : '') %>
    <%= link_to 'map', map_path, class: 'link link-primary' + (is_current_page?('map') ? ' selected' : '') %>
    <%= link_to 'rules', rules_path, class: 'link link-primary' + (is_current_page?('rules') ? ' selected' : '') %>
    <%= link_to 'FAQ', faq_path, class: 'link link-primary' + (is_current_page?('faq') ? ' selected' : '') %>
    <% if logged_in? %>
        <%= link_to 'cabin details', details_path, class: 'link link-primary' + (is_current_page?('details') ? ' selected' : '') %>
        <%= link_to 'lodging Options', accommodations_path, class: 'link link-primary' + (is_current_page?('accommodations') ? ' selected' : '') %>
    <% end %>
    <% if logged_in? && is_admin? %>
        <%= link_to 'admin', admin_path, class: 'link link-primary' + (is_admin_route? ? ' selected' : '')  %>
    <% end %>
  </div>
</div>
<% if is_admin? && is_admin_route? %>
  <%= render 'layouts/admin' %>
<% end %>
