<div class="header">
  <div class="gearhead"></div>
  <div class="row right">
    <div class="user">
      <% if logged_in? %>
        <%= current_user.name %><span class="gray">&nbsp|</span>
        <%= link_to 'Log out', logout_path, method: :delete %>
      <% else %>
          <%= link_to 'login', login_path %>&nbsp;|&nbsp;<%= link_to 'register', signup_path %>
      <% end %>
    </div>
  </div>
  <div class="row headerlinks">
      <%= link_to 'home', {controller: 'blog', action: 'index', category: 'home'}, class: 'link link-primary' %>
      <%= link_to 'overview & pricing', overview_path, class: 'link link-primary' %>
      <%= link_to 'map', map_path, class: 'link link-primary' %>
      <%= link_to 'cabin details', details_path, class: 'link link-primary' %>
      <%= link_to 'rules', {controller: 'blog', action: 'index', category: 'rule'}, class: 'link link-primary' %>
      <%= link_to 'FAQ', {controller: 'blog', action: 'index', category: 'faq'}, class: 'link link-primary' %>
    <% if logged_in? && is_admin? %>
        <%= link_to 'admin', admin_path, class: 'link link-primary' %>
    <% end %>
  </div>
</div>
