<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= form_for(@post) do |f| %>
        <%= render 'layouts/error_messages' %>
        <%= hidden_field(:post, :category) %>
      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :body %><br>
        <%= f.text_area :body %>
      </div>
        <div class="field">
          <%= f.label :sticky, class: 'same-line' %>
          <%= f.check_box :sticky %>
        </div>
      <div class="actions">
        <%= f.submit "Update", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>