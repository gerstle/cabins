<table class="table table-hover table-condensed">
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Admin?</th>
    <th>Selected Role</th>
    <th>Confirmed Planner*</th>
    <th>Approved Tier</th>
    <th>Tier Approved email Date</th>
    <th>Registered Date</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @registrations.each do |r| %>
      <tr data-item-id=<%= "#{r.id}" %> class="item">
        <td><%= r.name %></td>
        <td><%= r.email%></td>
        <td><%= r.admin %></td>
        <td><%= r.role %></td>
        <td><%= r.planner_found %></td>
        <td><%= r.tier.full_label unless r.tier.nil? %></td>
        <td><%= r.tier_approved_email %></td>
        <td><%= r.created_at %></td>
        <td>
          <%= link_to 'edit', user_path(r) %>
          <%= link_to 'send&nbsp;tier&nbsp;email'.html_safe, tier_approved_path(r), :method => :patch, data: { confirm: 'Are you sure you want to send the tier approved email?' } %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>