<% if logged_in? && @category == 'home' %>
<%= render 'layouts/status' %>
<% end %>

<% @posts.each do |p| %>
  <div class="row">
    <div class="col-md-12 post">
      <div class="title"><h3><strong><%= p.title %></strong></h3></div>
      <div class="content"><%= p.body.try(:html_safe) %></div>
    </div>
  </div><!-- end post row -->
<% end %>
