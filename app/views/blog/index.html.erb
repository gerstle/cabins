<% if logged_in? && @category == 'home' %>
<%= render 'layouts/status' %>
<% end %>

<div class="row">
<% @posts.each do |p| %>
  	<% if p.sticky %>
    <div class="col-md-12">
    <% else %>
    <div class="col-md-4">
    <% end %>
    	<div class="post">
    		<div class="title text-center"><h3><strong><%= p.title %></strong></h3></div>
    		<div class="content"><%= p.body.try(:html_safe) %></div>
    	</div>
    </div>
<% end %>
</div>
