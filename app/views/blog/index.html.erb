<% if logged_in? && @category == 'home' %>
<%= render 'layouts/status' %>
<% end %>

<div class="row">
<% @posts.each do |p| %>
  	<% if p.sticky %>
    <div class="col-md-12">
    <% else %>
    <div class="col-md-4">
    <% end %>
    	<div class="post">
    		<h3 class="text-center"><%= p.title %></h3>
    		<%= p.body.try(:html_safe) %>
    	</div>
    </div>
<% end %>
</div>